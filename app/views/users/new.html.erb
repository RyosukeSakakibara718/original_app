<% if flash[:no_account] %>
  <div class="login_failure">
    <div class="login_failure_mes"><%= flash[:no_account] %>
  </div>  
<% end %>  

<%= form_for @user do |f| %>
  
<div class="user-make">  
  <div class="col-md-6 col-md-offset-3">

    <p>新規登録のために情報を入力してください</p>
    <%= form_for(@user) do |f| %>

      <%= f.label :"名前", class: "user-make-label" %>
      <%= f.text_field :name, class: "form-control"%>

      <%= f.label :"メールアドレス", class: "user-make-label" %>
      <%= f.text_field :email, class: "form-control" %>

      <%= f.label :"アカウント名", class: "user-make-label" %>
      <%= f.text_field :account_name, class: "form-control"%>

      <%= f.label :"パスワード", class: "user-make-label" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :"パスワード確認", class: "user-make-label" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "アカウント作成", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
<% end %>
