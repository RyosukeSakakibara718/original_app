<div class="user-info">
  
  <div class="user-self-info">
    <div class="info-left">
      <img src = "<%="/user_images/#{@user.user_image}"%>" class= "user_img">
    </div>
    <div class="info-right">
      <div class="info-right-name"><h1 class="info-name"><%= @user.name %></h1>
      </div>
      <div class="info-right-num">
        <h3 class="info-account-name"><%= @user.account_name %></h3>
        <div class="follow">
          <h3 class="a">___フォロー中</h3>
          <h3 class="b">___フォロワー</h3>
        </div>
      </div>  
      <div class="profile-text"><%= @user.comment %></div>
    </div>
    <div class="info-rr">
      <%= link_to '編集', edit_user_path(id: @user.id) ,class:"info-edit" %>
    </div>

  </div>  
  <% @user.post.each do |f| %>
    <div class="user-travel-info">
    
      
        <div class="user-travel-left">  
          <div class="detail-img-box">
            <% f.details.first(4).each do |d| %>
              <div class="user-detail-img">
                <% if d.detail_image? %>
                  <%= link_to (image_tag "#{d.detail_image}"), viewing_path(f.id) %>
                <% else %>
                  <%= link_to (image_tag "/user_images/0.png"), viewing_path(f.id) %>
                <% end %>  
              </div>  
            <% end %>
          </div>
        </div>
    
        <div class="user-travel-right">  

          <div class="travel-title">
            <p>旅行タイトル：<%= f.title %></p>
          </div>
          <div class="travel-days">
            <p>宿泊日数：<%= f.stay %><%= f.days %></p>
          </div>  
          <div class="travel-who">
            <p>誰と：<%= f.who %></p>
          </div>
          <div class="travel-cost">
            <p>合計予算：<%= f.details.sum(:cost) %>円</p>
          </div>
          <div class="travel-like">
            <p>___　いいね　　___コメント</p>
          </div>

        </div> 
    </div>  
  <% end %>
</div>  

