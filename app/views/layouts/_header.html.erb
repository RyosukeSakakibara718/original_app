<div class="logo">
        <%= link_to 'Travel', root_path %>
      </div>  
        <div class="header-menus">
          <ul class="header-menu">
            <% if session[:user_id] %>  
              <li><%= link_to User.find(session[:user_id]).name, user_path(session[:user_id]) %></li>
              <li><%= link_to "ログアウト", logout_path, method: :delete  %></li>
              <li><%= link_to "新規投稿", new_post_path %></li>
            <% else %>  
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                ログイン <b class="caret"></b>
                </a>
                <div class="dropdown-menu">
                  <div class="dropdown-login">
                    <%= form_for(:session, url: login_path) do |f| %>
  
                      <%= f.label :"メールアドレス" %>
                      <%= f.text_field :email, class: "form-control" %>

                      <%= f.label :"パスワード" %>
                      <%= f.password_field :password, class: "form-control" %>

                      <%= f.submit "ログイン", class: "login-btn" %>
            
                    <% end %>
                  </div>  
                </div>
              </li>
              <li><%= link_to "新規登録" , new_user_path %></li>
              <li><%= link_to "検索" , root_path %></li>
            <% end %>  
          </ul>
          
        </div>

